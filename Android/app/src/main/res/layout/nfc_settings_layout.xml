<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nfc_settings_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/nfcsettings_layout_image"
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:contentDescription="Descriere" />

    <TextView
        android:id="@+id/nfcsettings_layout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nfcsettings_layout_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="Activati serviciul NFC"
        android:textSize="17sp"
        android:textStyle="bold" />
</LinearLayout>